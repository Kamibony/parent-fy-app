{
    "name": "Flutter Workspace",
    // Základný image, ktorý obsahuje bežné nástroje
    "image": "mcr.microsoft.com/devcontainers/universal:2",

    // Sekcia "features" definuje dodatočné nástroje na inštaláciu
    "features": {
        // Feature pre inštaláciu Dart SDK (ktorý zahŕňa aj Flutter)
        "ghcr.io/devcontainers/features/dart:1": {
            // Tu môžeš špecifikovať verziu, ak potrebuješ inú ako predvolenú
            // "version": "latest" 
        },
        // Feature pre inštaláciu Git LFS klienta
        "ghcr.io/devcontainers/features/git-lfs:1": {
            // Tu môžeš špecifikovať verziu Git LFS, ak potrebuješ
            // "version": "latest"
        }
    },

    // Nastavenia špecifické pre VS Code v Codespace
    "customizations": {
        "vscode": {
            // Odporúčané rozšírenia pre Flutter/Dart vývoj
            "extensions": [
                "Dart-Code.flutter",
                "Dart-Code.dart-code"
            ]
        }
    },

    // Nastavenia pre integrovaný terminál
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "/bin/bash",
            // Argument -l je dôležitý pre správne načítanie PATH pre nainštalované nástroje
            "args": ["-l"] 
        }
    }

    // --- Voliteľné sekcie (môžeš odkomentovať a upraviť podľa potreby) ---

    // Presmerovanie portov (napr. pre `flutter run -d chrome`)
    // "forwardPorts": [8080], 

    // Príkaz, ktorý sa automaticky spustí po vytvorení kontajnera
    // "postCreateCommand": "flutter doctor" 
}
